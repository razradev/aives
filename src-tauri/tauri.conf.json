{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aives",
  "version": "0.1.0",
  "identifier": "dev.aives.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "removeUnusedCommands": true,
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "aives",
        "width": 480,
        "height": 480,
        "x": 0,
        "y": 0,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/kokoro-v1.1-zh.onnx",
      "resources/voices-v1.1-zh.bin",
      "resources/kokoro-v1.0.onnx",
      "resources/voices-v1.0.bin"
    ]
  }
}
